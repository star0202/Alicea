// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model LogChannel {
    id String @id @unique

    channel String
}

model IgnoredChannel {
    id String @id @unique

    guild String
}

model IgnoredUser {
    id String @id

    guild String
}

model Welcome {
    id String @id @unique

    user String?
    bot  String?
}

model CleanChannel {
    id String @id @unique

    guild        String
    cleanAllowed Boolean @default(false)
}

model Role {
    id String @id @unique
}

model Censor {
    id String @id

    regex  String
    reason String
}

model Raid {
    id String @id @unique

    months Int
    
    role String
}
